<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="250dp"
    card_view:cardElevation="3dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/colorPrimary"
    android:padding="5dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_launcher_background"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/DailogName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/action_sign_in"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/DailogAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:text="Saint Cloud, MN" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Activity" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/daialogActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:text="@string/app_name"
                />
            <EditText
                android:id="@+id/daialogEditActivity"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:inputType="text"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:gravity="bottom"
                android:text="@string/app_name"

                android:importantForAutofill="no"
                card_view:targetApi="o" />

            <TextView
                android:id="@+id/updateActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:gravity="end"
                android:text="Update"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#fc3200"
                android:textSize="12sp"
               android:clickable="true"

                android:focusable="true" />

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>